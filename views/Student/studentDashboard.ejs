<%- include('partials/studenthead') %>
<div class="container-fluid py-4 min-vh-100">
  

  <div class="row" style="margin-top: -20px;">

 
    <div class="card-group mb-2">
    
      <%inProgressSectionsData.forEach(x => { %>
        <div class="card z-card bg-gradient-light text-dark font-weight-bold mb-4">
          <div class="card-header mx-4 p-3  pb-0 text-center bg-gradient-light text-dark font-weight-bold">
            <h6 class=" mb-0"> <%= x.course_title %> </h6>
            <span class="text-sm"><%= x.section_code %></span>
           <hr class="pb-2 mt-2">
          </div>
          <div class="card-body pt-0 p-3 ">
            <span class="text-sm d-block pb-1"><%= x.faculty_name %></span>

            <% if (x.room_id) { %>
              <span class="text-xs d-block pb-1">ROOM <%= x.room_id %></span>
            <% }else{ %>
              <span class="text-xs d-block pb-1">N/A</span>
              <% }%>
           
            <span class="text-xs d-block pb-1"><%= x.slot_details %> </span>
          
         
          
          </div>
          </div> 
      <% }) %>
      

     
        
        
     

  
    </div>
   
   
    
  </div>
<br>
<div class="row" >

 
<div class="row col-lg-6">
  <div class=" col-sm-6 mb-4 ">
    <div class="card">
      <div class="card-body p-3">
        <div class="row">
          <div class="col-8">
            <div class="numbers">
              <p class="text-md mb-0 text-uppercase font-weight-bold">On Going Courses</p>
              <br>
              <h5 class="font-weight-bolder">
                <%= totalinProgressCourses %>
              </h5>
             
            </div>
          </div>
          <div class="col-4 text-end">
            <div class="icon icon-shape bg-gradient-success shadow-success text-center rounded-circle">
              <i class="ni ni-app text-lg opacity-10" aria-hidden="true"></i>
            </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class=" col-sm-6 mb-4">
    <div class="card">
      <div class="card-body p-3">
        <div class="row">
          <div class="col-8">
            <div class="numbers">
              <p class="text-md mb-0 text-uppercase font-weight-bold">Courses Completed</p>
              <br>
              <h5 class="font-weight-bolder">
                <%= totalCompletedCourses %>
              </h5>
             
            </div>
          </div>
          <div class="col-4 text-end">
            <div class="icon icon-shape bg-gradient-danger shadow-danger text-center rounded-circle">
              <i class="ni ni-world text-lg opacity-10" aria-hidden="true"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class=" col-sm-6 mb-4">
    <div class="card">
      <div class="card-body p-3">
        <div class="row">
          <div class="col-8">
            <div class="numbers">
              <p class="text-md mb-0 text-uppercase font-weight-bold">Account Balance</p>
              <br>
              <h5 class="font-weight-bolder">
                PKR <%= accountBalance %>
              </h5>
            
            </div>
          </div>
          <div class="col-4 text-end ">
            <div class="icon icon-shape bg-gradient-primary shadow-primary text-center rounded-circle">
              <i class="ni ni-money-coins  opacity-10" aria-hidden="true"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class=" col-sm-6 mb-4">
    <div class="card">
      <div class="card-body p-3">
        <div class="row">
          <div class="col-8">
            <div class="numbers">
              <p class="text-md mb-0 text-uppercase font-weight-bold">Degree Completed</p>
              <br>
              <h5 class="font-weight-bolder">
                33 %
              </h5>
             
            </div>
          </div>
          <div class="col-4 text-end">
            <div class="icon icon-shape bg-gradient-warning shadow-warning text-center rounded-circle">
              <i class="ni ni-paper-diploma text-lg opacity-10" aria-hidden="true"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="chart-container" class="text-center mt-0 col-lg-6 " >
  FusionCharts will render here
</div>
</div>
    
   
 
  </div>
<%- include('partials/footer') %>
